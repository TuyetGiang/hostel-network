<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".activity.AppointmentDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="THÔNG TIN NGƯỜI HẸN"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/tagUserPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tagTitlePost"
                android:background="@drawable/item_border"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/imgAvatarUserAppointmentDetail"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/avatar" />

                <TextView
                    android:id="@+id/txtNameUserAppointmentDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/imgAvatarUserAppointmentDetail"
                    android:text="Nguyễn Văn A"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iconPhoneUserAppointmentDetail"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/txtNameUserAppointmentDetail"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imgAvatarUserAppointmentDetail"
                    android:src="@drawable/phone_icon"
                    android:tint="@color/icon_color" />

                <TextView
                    android:id="@+id/txtPhoneAppointmentDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtNameUserAppointmentDetail"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/iconPhoneUserAppointmentDetail"
                    android:text="0123456789" />

                <ImageView
                    android:id="@+id/iconLocationUserAppointmentDetail"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/txtPhoneAppointmentDetail"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imgAvatarUserAppointmentDetail"
                    android:src="@drawable/location"
                    android:tint="@color/icon_color" />

                <TextView
                    android:id="@+id/txtAddressAppointmentDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtPhoneAppointmentDetail"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/iconLocationUserAppointmentDetail"
                    android:text="15A Tô Ký, Phường Tân Chánh hiệp, Quận 12" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/backgroud_post" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="THÔNG TIN NHÀ HẸN ĐỂ XEM"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/item_border">

                <ImageView
                    android:id="@+id/imgPostAppointmentDetail"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"

                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/avatar" />


                <TextView
                    android:id="@+id/txtPostTypeAppointmentDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/imgPostAppointmentDetail"
                    android:text="KÍ TÚC XÁ"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txtPostTitleAppointmentDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtPostTypeAppointmentDetail"
                    android:layout_toRightOf="@id/imgPostAppointmentDetail"
                    android:text="Kí túc xá cao cấp Ngọc An"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"


                    />

                <TextView
                    android:id="@+id/txtPostCostAppointmentDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtPostTitleAppointmentDetail"
                    android:layout_toRightOf="@id/imgPostAppointmentDetail"
                    android:inputType="number"
                    android:text="1.500.000"
                    android:textColor="@color/colorAccent"

                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPostAddressAppointmentDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtPostCostAppointmentDetail"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_toRightOf="@id/imgPostAppointmentDetail"
                    android:text="15A Tô Ký, Phường Tân Chánh Hiệp, Quận 12"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtPostDateAppointmentDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtPostAddressAppointmentDetail"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_toRightOf="@id/imgPostAppointmentDetail"
                    android:inputType="date"
                    android:text="15/2/2019"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/btnGoPostDetailFromAppointmentDetail"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:clickable="true"
                    android:src="@drawable/arrow_icon" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/backgroud_post" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="THÔNG TIN CUỘC HẸN"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/item_border">
                <TextView
                    android:id="@+id/txtTimeAppointmentDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/txtNoteAppointmentDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/txtStatusAppointmentDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="16sp" />
            </LinearLayout>




        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnCallPhoneAppointmentDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Gọi điện" />

            <Button
                android:id="@+id/btnAcceptAppointmentDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chấp nhận" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnRejectAppointmentDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Từ chối" />

            <Button
                android:id="@+id/btnDeleteAppointmentDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xóa" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>